#define LEFT OUT_A
#define CLAW OUT_B
#define RIGHT OUT_C

#define LIGHT_CYL SENSOR_1
#define LIGHT_LINE SENSOR_2
#define TOUCH SENSOR_3

void InitSensors()
{
  SetSensor( LIGHT_CYL, SENSOR_LIGHT );
  SetSensor( LIGHT_LINE, SENSOR_LIGHT );
  SetSensor( TOUCH, SENSOR_TOUCH );
}

task main()
{
  InitSensors();
  
  while( 1 )
  {
    until( TOUCH == 1 );
    until( TOUCH == 1 );
    until( TOUCH == 1 );
    until( TOUCH == 1 );
  }
}
