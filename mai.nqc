#define LEFT OUT_A
#define RIGHT OUT_C

#include "sensors.nqc"
#include "claw.nqc"

task main()
{
  InitSensors();
  
  while( 1 )
  {
    until( TOUCH == 1 );
    LiftClaw();
    
    until( TOUCH == 1 );
    StopClaw();
    
    until( TOUCH == 1 );
    DropClaw();
    
    until( TOUCH == 1 );
    StopClaw();
  }
}
